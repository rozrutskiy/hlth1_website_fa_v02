<?xml version="1.0" encoding="utf-8"?>
<configuration>
    <system.webServer>
        <!-- Allow directory browsing for debugging (optional, can be removed in production) -->
        <directoryBrowse enabled="false" />

        <!-- MIME type mappings -->
        <staticContent>
            <mimeMap fileExtension=".css" mimeType="text/css" />
            <mimeMap fileExtension=".js" mimeType="application/javascript" />
            <mimeMap fileExtension=".png" mimeType="image/png" />
            <mimeMap fileExtension=".jpg" mimeType="image/jpeg" />
            <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
        </staticContent>

        <!-- Caching rules -->
        <httpProtocol>
            <customHeaders>
                <add name="Cache-Control" value="public, max-age=31536000" />
            </customHeaders>
        </httpProtocol>

        <!-- Enable static file handling -->
        <handlers>
            <add name="StaticFile" path="*" verb="*" modules="StaticFileModule" resourceType="File" />
        </handlers>

        <!-- Error handling -->
        <httpErrors errorMode="Custom">
            <remove statusCode="404" subStatusCode="-1" />
            <error statusCode="404" path="/static/error.html" responseMode="ExecuteURL" />
        </httpErrors>
    </system.webServer>
</configuration>
